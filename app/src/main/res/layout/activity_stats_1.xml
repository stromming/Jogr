<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15" />

    <TextView
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="Du brände 400 kcal! Det är en skinkmacka!"
        android:id="@+id/text1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:textSize="12pt" />

    <ImageView

        android:layout_width="154dp"
        android:layout_height="199dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:contentDescription="sandwich.png"
        android:src="@mipmap/sandwich"
        android:visibility="visible" />

    <Button
        android:layout_width="192dp"
        android:layout_height="67dp"
        android:text="Dela till facebook!"
        android:id="@+id/button_fb"
        android:layout_gravity="center_horizontal"
        android:onClick="shareToFacebook"
        />

    <ImageView
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/plopp2" />
</LinearLayout>